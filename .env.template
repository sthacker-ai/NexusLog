# ========================================
# NexusLog Environment Configuration
# ========================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git!

# ========================================
# Database Configuration
# ========================================
DATABASE_URL=postgresql://username:password@localhost:5432/nexuslog

# ========================================
# Telegram Bot
# ========================================
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_WEBHOOK_URL=https://your-domain.com/api/telegram/webhook

# ========================================
# AI Services (Priority: Gemini → Ollama → Replicate)
# ========================================

# Google Gemini (PRIMARY - Free tier)
GOOGLE_AI_API_KEY=your_gemini_api_key_here

# Ollama (LOCAL - Free)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# Replicate (FALLBACK - Costs money)
REPLICATE_API_KEY=optional_fallback_key

# OpenAI (OPTIONAL)
OPENAI_API_KEY=optional_if_you_have_it

# ========================================
# Google Sheets Integration
# ========================================
GOOGLE_SHEETS_CREDENTIALS_PATH=./credentials/google-sheets-creds.json
GOOGLE_SHEET_ID=your_sheet_id_here

# ========================================
# Flask Configuration
# ========================================
FLASK_SECRET_KEY=generate_random_secret_key_here
FLASK_ENV=development

# ========================================
# Deployment Configuration
# ========================================
DEPLOYMENT_TARGET=hostinger
CUSTOM_DOMAIN=thinkbits.in/nexuslog

# ========================================
# TTS Configuration
# ========================================
DEFAULT_TTS_VOICE=en-GB-male
TTS_PROVIDER=gemini
